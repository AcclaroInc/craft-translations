{% import 'translations/_components/_forms/button' as button %}

<div class="recentnews-container scroll-x-auto">
    {% if ads|length %}
        <div class="data ad-container fullwidth">
            {% for ad in ads %}
                <div class="field">
                    <div class="heading">
                        <label> {{ ad.heading }} </label>
                    </div>
                    <div class="input ltr">
                        {{ ad.content }}
                    </div>
                    <div class="flex" style="justify-content: end;">
                        {{ button.anchorButton({
                            label: ad.linkText,
                            href: ad.link,
                        }) }}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="data fullwidth">
            <p>{{ "No ads to show."|t('app') }}</p>
        </div>
    {% endif %}
</div>